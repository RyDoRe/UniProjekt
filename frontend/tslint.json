{
  "extends": [
      "tslint:latest",
      "codelyzer"
  ],
  "rulesDirectory": [
      "node_modules/codelyzer"
  ],
  "rules": {
      "align": false,
      "array-type": false,
      "arrow-parens": false,
      "arrow-return-shorthand": false,
      "ban-comma-operator": false,
      "ban-types": {
          "options": [
              [
                  "Object",
                  "Did you mean `object`?"
              ],
              [
                  "Function",
                  "Prefer a specific function type."
              ],
              [
                  "Boolean",
                  "Did you mean `boolean`?"
              ],
              [
                  "Number",
                  "Did you mean `number`?"
              ],
              [
                  "String",
                  "Did you mean `string`?"
              ]
          ]
      },
      "class-name": false,
      "comment-format": [
          true,
          "check-space"
      ],
      "curly": [
          true,
          "ignore-same-line"
      ],
      "eofline": true,
      "forin": false,
      "indent": [
          true,
          "spaces"
      ],
      "interface-name": false,
      "interface-over-type-literal": true,
      "jsdoc-format": false,
      "linebreak-style": false,
      "max-classes-per-file": false,
      "max-line-length": false,
      "member-access": false,
      "member-ordering": false,
      "no-angle-bracket-type-assertion": false,
      "no-bitwise": false,
      "no-conditional-assignment": false,
      "no-consecutive-blank-lines": false,
      "no-console": [
          true,
          "log"
      ],
      "no-debugger": false,
      "no-duplicate-variable": false,
      "no-empty": false,
      "no-empty-interface": false,
      "no-eval": false,
      "no-implicit-dependencies": false,
      "no-internal-module": true,
      "no-namespace": false,
      "no-null-keyword": false,
      "no-object-literal-type-assertion": false,
      "no-reference": false,
      "no-return-await": true,
      "no-shadowed-variable": false,
      "no-string-literal": false,
      "no-submodule-imports": false,
      "no-switch-case-fall-through": false,
      "no-this-assignment": false,
      "no-trailing-whitespace": [
          true,
          "ignore-template-strings"
      ],
      "no-unnecessary-qualifier": true,
      "no-unnecessary-type-assertion": true,
      "no-var-keyword": false,
      "no-var-requires": false,
      "object-literal-key-quotes": false,
      "object-literal-shorthand": false,
      "object-literal-sort-keys": false,
      "one-line": [
          true,
          "check-open-brace",
          "check-whitespace"
      ],
      "one-variable-per-declaration": false,
      "only-arrow-functions": false,
      "ordered-imports": false,
      "prefer-conditional-expression": false,
      "prefer-const": false,
      "prefer-for-of": false,
      "prefer-object-spread": false,
      "quotemark": false,
      "radix": false,
      "semicolon": [
          true,
          "always",
          "ignore-bound-class-methods"
      ],
      "space-before-function-paren": false,
      "space-within-parens": true,
      "trailing-comma": [
          true,
          {
              "multiline": "always",
              "singleline": "never"
          }
      ],
      "triple-equals": false,
      "typedef-whitespace": [
          true,
          {
              "call-signature": "nospace",
              "index-signature": "nospace",
              "parameter": "nospace",
              "property-declaration": "nospace",
              "variable-declaration": "nospace"
          },
          {
              "call-signature": "onespace",
              "index-signature": "onespace",
              "parameter": "onespace",
              "property-declaration": "onespace",
              "variable-declaration": "onespace"
          }
      ],
      "variable-name": false,
      "whitespace": [
          true,
          "check-branch",
          "check-decl",
          "check-operator",
          "check-module",
          "check-separator",
          "check-type"
      ],
      // Codelyzer - Functionality
      "banana-in-box": true,
      "contextual-life-cycle": true,
      "decorator-not-allowed": true,
      "pipe-impure": true,
      "templates-no-negated-async": true,
      // Codelyzer - Maintainability
      "i18n": false,
      "max-inline-declarations": false,
      "no-attribute-parameter-decorator": false,
      "no-conflicting-life-cycle-hooks": false,
      "no-forward-ref": false,
      "no-input-prefix": [
          true,
          "can",
          "should"
      ],
      "no-input-rename": false,
      "no-life-cycle-call": false,
      "no-output-named-after-standard-event": false,
      "no-output-on-prefix": false,
      "no-output-rename": false,
      "no-template-call-expression": false,
      "no-unused-css": true,
      "prefer-output-readonly": false,
      "template-conditional-complexity": false,
      "template-cyclomatic-complexity": false,
      "trackBy-function": false,
      "use-life-cycle-interface": false,
      "use-pipe-decorator": true,
      "use-pipe-transform-interface": false,
      "use-view-encapsulation": false,
      // Codelyzer - Style
      "angular-whitespace": [true, "check-semicolon"],
      "component-class-suffix": false,
      "component-selector": false,
      "directive-class-suffix": false,
      "directive-selector": false,
      "enforce-component-selector": true,
      "import-destructuring-spacing": true,
      "no-queries-parameter": true,
      "pipe-naming": false,
      "pipe-prefix": false,
      "prefer-inline-decorator": [true, "HostListener"],
      "use-host-property-decorator": false,
      "use-input-property-decorator": true,
      "use-output-property-decorator": true
  }
}